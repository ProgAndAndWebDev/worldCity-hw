<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldCityhw" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

  <!--  view  -->
    <style name="view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
<!--  style card   -->
    <style name="card" >
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

<!--  style card once row  -->
    <style name="card.onceRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_weight">1</item>
    </style>
<!--  style card second row  -->
    <style name="card.secondRow">
        <item name="android:layout_height">119dp</item>
    </style>
<!--  style text card  -->
    <style name="textCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<!--  style title card  -->
    <style name="textCard.title">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
<!--  style content card  -->
    <style name="textCard.content">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--  style content card center  -->
    <style name="textCard.content.center">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>